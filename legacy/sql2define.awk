#
#     Converts SQL to C #define's
#
##############################################################################
##############################################################################



BEGIN {
	print "/* automagically converted */"
	print
}

/^-- END QUERY --$/ {
	printf "\"\n\n"
	do_print = 0
}

do_print == 1 {
	printf " %s ", $0
}

/^-- BEGIN QUERY/ {
	query_name = $4
	do_print = 1
	printf "#define %s \"", query_name
}
